table.users-table
  thead
    tr
      th User name / email
      th Screen name
      th Active
      th Administrator
      th Authentication type
      th Date joined
  tbody
    template(v-for="user in users")
      tr
        th.label {{user.username}}
        td.screenname {{user.screenname}}
        td.active(v-on:click="toggleUserStatus(user.id,'active',user.active)" v-bind:class="{inactive:user.public}") {{user.active_text}}
        td.admin(v-on:click="toggleUserStatus(user.id,'isAdmin',user.isAdmin)" v-bind:class="{inactive:!user.active}") {{user.isAdmin_text}}
        td.authType {{user.authType}}
        td.created {{user.created_ds}}
        td.delete(v-on:click="deleteUser(user.id)" v-bind:class="{inactive:user.public || user.active}") delete