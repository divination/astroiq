//- Select row with label + dropdown
mixin selectrow(name,label,options)
  p(class=name.sanitize('-')+'-row')
      label(for="form-"+name.sanitize('-'))= label
      select(id="form-"+name.sanitize('-'))&attributes(attributes)
        each opt,index in options
          option(value = opt.value selected=opt.selected)= opt.label
//- end of selectrow